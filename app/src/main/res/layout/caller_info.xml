<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:background="@drawable/user_info_ui" />

        <com.example.android.truecaller.customwidget.CustomTextViewRobotoBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:text="Name"
            android:textSize="26dp" />

        <com.example.android.truecaller.customwidget.CustomTextViewRobotoLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="110dp"
            android:text="Address"
            android:textSize="26dp" />

    </FrameLayout>

    <com.example.android.truecaller.customwidget.CustomTextViewRobotoForadian
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Time Of Call"
        android:textColor="#fff"
        android:textSize="18dp" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

    </LinearLayout>

</LinearLayout>